<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32dp</item>

    </style>
    <style name="etditText_profile">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="imgview_profile">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>
    <style name="LinearLayout_profile">
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="textview_editprofile">

        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="edittext_editProfile">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="img_style">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="tieude_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="edtextdangky_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
    <style name="etkhung_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
